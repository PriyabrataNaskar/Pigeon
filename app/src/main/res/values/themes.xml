<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pigeon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.Pigeon" parent="Theme.Pigeon">
        <item name="fontFamily">@font/architects_daughter</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Chip.Pigeon" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">0dp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="fontFamily">@font/libre_franklin_medium</item>
    </style>
</resources>